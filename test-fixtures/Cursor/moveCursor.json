{
  "common": {
    "inputLines": ["123456789/123456789", "123456789", "123456789/123456789"]
  },
  "testCases": [
    {
      "name": "zero amount",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 7
      },
      "inputAmount": 0,
      "expectedCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 7
      }
    },
    {
      "name": "positive amount (current line)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 5
      },
      "inputAmount": 3,
      "expectedCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 8
      }
    },
    {
      "name": "positive amount (next line)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 2
      },
      "inputAmount": 11,
      "expectedCursorCoordinate": {
        "lineIndex": 2,
        "charIndex": 3
      }
    },
    {
      "name": "positive amount (too much)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 1
      },
      "inputAmount": 30,
      "expectedCursorCoordinate": {
        "lineIndex": 2,
        "charIndex": 19
      }
    },
    {
      "name": "negative amount (current line)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 7
      },
      "inputAmount": -7,
      "expectedCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 0
      }
    },
    {
      "name": "negative amount (previous line)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 2
      },
      "inputAmount": -11,
      "expectedCursorCoordinate": {
        "lineIndex": 0,
        "charIndex": 11
      }
    },
    {
      "name": "negative amount (too much)",
      "inputCursorCoordinate": {
        "lineIndex": 1,
        "charIndex": 2
      },
      "inputAmount": -25,
      "expectedCursorCoordinate": {
        "lineIndex": 0,
        "charIndex": 0
      }
    }
  ]
}
