{
  "note": [
    "There are some categories in these tests:",
    "- section menu",
    "  - menuitem: button normal larger largest",
    "  - selection: no-selection single-line-selection multi-lines-selection",
    "    - no-selection: empty-line normal-line section-line other",
    "    - single-line-selection: normal-line section-line other",
    "    - multi-lines-selection",
    "- itemization menu",
    "  - menuitem: button indent outdent",
    "  - selection: no-selection selection",
    "    - no-selection: empty-line no-itemized-line itemized-line nested-itemized-line quoted-line nested-quoted-line",
    "    - selection: no-itemized-line has-itemized-line",
    "- bold menu",
    "  - selection: no-selection single-line-selection multi-lines-selection",
    "    - no-selection: empty-line in-bold in-normal other",
    "    - single-line-selection: empty-line in-bold-all in-bold-left in-bold-mid in-bold-right",
    "                             in-normal in-normal-with-bold-left in-normal-with-bold-right other",
    "    - multi-lines-selection",
    "- italic menu",
    "  - selection: no-selection single-line-selection multi-lines-selection",
    "    - no-selection: empty-line in-italic in-normal other",
    "    - single-line-selection: empty-line in-italic-all in-italic-left in-italic-mid in-italic-right",
    "                             in-normal in-normal-with-italic-left in-normal-with-italic-right other",
    "    - multi-lines-selection",
    "- underline menu",
    "  - disabled",
    "- quotation",
    "  - menuitem: button indent outdent",
    "  - selection: no-selection selection",
    "    - no-selection: empty-line no-quoted-line quoted-line nested-quoted-line itemized-line nested-itemized-line",
    "    - selection: no-quoted-line has-quoted-line"
  ],
  "testCases": [
    {
      "name": "section menu: button, no-selection, empty-line",
      "textLines": [""],
      "inputMouse": [
        {
          "type": "mouseDown",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        },
        {
          "type": "mouseMove",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        }
      ],
      "inputMenu": {
        "name": "section-menu",
        "menuButton": "dropdown-anchor-button"
      },
      "inputTyping": ["React Realtime Markup Editor"],
      "expectedLinesAfterMenu": ["## larger"],
      "expectedLinesAfterTyping": ["## React Realtime Markup Editor"]
    },
    {
      "name": "section menu: button, no-selection, normal-line (normal text)",
      "textLines": ["WYSIWYG Editor"],
      "inputMouse": [
        {
          "type": "mouseDown",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        },
        {
          "type": "mouseMove",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        }
      ],
      "inputMenu": {
        "name": "section-menu",
        "menuButton": "dropdown-anchor-button"
      },
      "inputTyping": ["."],
      "expectedLinesAfterMenu": ["## WYSIWYG Editor"],
      "expectedLinesAfterTyping": ["## .WYSIWYG Editor"]
    },
    {
      "name": "section menu: button, no-selection, normal-line (decorated text)",
      "textLines": ["#WYSIWYG_Editor"],
      "inputMouse": [
        {
          "type": "mouseDown",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 7
          }
        },
        {
          "type": "mouseMove",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 7
          }
        }
      ],
      "inputMenu": {
        "name": "section-menu",
        "menuButton": "dropdown-anchor-button"
      },
      "inputTyping": ["."],
      "expectedLinesAfterMenu": ["## #WYSIWYG_Editor"],
      "expectedLinesAfterTyping": ["## #WYSIWY.G_Editor."]
    },
    {
      "name": "undo section menu",
      "textLines": [""],
      "inputMouse": [
        {
          "type": "mouseDown",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        },
        {
          "type": "mouseMove",
          "coordinate": {
            "lineIndex": 0,
            "charIndex": 0
          }
        }
      ],
      "inputMenu": {
        "name": "section-menu",
        "menuButton": "dropdown-anchor-button"
      },
      "inputTyping": ["{ctrl}z{/ctrl}."],
      "expectedLinesAfterMenu": ["## larger"],
      "expectedLinesAfterTyping": ["."]
    }
  ]
}
